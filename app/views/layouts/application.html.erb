<!DOCTYPE html>
<html>
  <head>
    <title>Testrails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
        <% if current_admin %>
          <li>
          <% logged_in = "Logged in as admin" + current_admin.email %>
          <%= logged_in %>
          </li>
          <li>
          <%= link_to('Logout of admin', destroy_admin_session_path, method: :delete) %>        
          </li>
        <% elsif current_user %>
          <li>
            <% logged_in = "Logged in as user " + current_user.email %>
            <%= logged_in %>
          </li>
          <li>
            <%= link_to('Logout of user', destroy_user_session_path, method: :delete) %>
          </li>
        <% else %>
          <li>
          <%= link_to('Login as admin', new_admin_session_path)  %>
          </li>
          <li>
          <%= link_to('Login as user', new_user_session_path) %>
          </li>
        <% end %> 
    <%= yield %>
  </body>
</html>
